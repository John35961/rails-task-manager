<div class="container p-4">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-lg-6">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2><%= pluralize(@tasks.length, 'task') %></h2>
          <div>
            <%= link_to new_task_path, class:"btn btn-outline-primary" do %>
              <i class="fa-solid fa-plus"></i>
              <span>task</span>
            <% end %>
            <%= link_to new_group_path, class:"btn btn-outline-primary" do %>
              <i class="fa-solid fa-plus"></i>
              <span>group</span>
            <% end %>
          </div>
        </div>
        <div class="mb-3">
          <%= form_for tasks_path, class:"d-flex", method: :get do |f| %>
            <%= text_field_tag :query,
                               params[:query],
                               class:"form-control me-2",
                               placeholder:"Find a task..." %>
            <%=  button_tag(type:"submit", class:"btn btn-primary") do %>
              <i class="fa-solid fa-magnifying-glass"></i>
            <% end %>
          <% end %>
        </div>
        <% if @tasks.length.nonzero? %>
          <ul class="list-group">
            <% @tasks.each do |task| %>
              <li class="list-group-item d-flex justify-content-between" data-controller="tasks" data-tasks-update-url=<%= task_path(task) %>>
                <div class="d-flex flex-grow-1">
                    <input type="checkbox" class="form-check-input align-self-center me-1" data-tasks-target="completed" data-action="change->tasks#toggle" <% if task.completed %> checked <% end %>>
                  <div class="d-flex flex-row mx-2">
                    <div class="mb-2">
                      <%= link_to task.title, edit_task_path(task), class:"fs-3", data: {tasks_target:"title"} %>
                      <div class="opacity-50">
                        <%= task.details %>
                      </div>
                    </div>
                  </div>
                  <div class="d-flex flex-column flex-grow-1 justify-content-center align-items-end text-end me-3 opacity-25">
                    <small><%= task.priority %>/5</small>
                    <small><%= task.group.name %></small>
                    <small><%= task.created_at.strftime("On %a. %d %B") %></small>
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center">
                  <div>
                    <%= link_to task_path(task), class:"text-danger",
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                      <i class="fa-solid fa-trash"></i>
                    <% end %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="d-flex flex-column justify-content-center align-items-center">
            <span class="my-3">
              <%= params[:query] ? 'No task found' : 'You don\'t have any task yet!' %>
            </span>
          </div>
        <% end %>
    </div>
  </div>
</div>

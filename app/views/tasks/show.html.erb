<div class="container p-4">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="d-flex justify-content-between">
        <div class="h-100">
          <%= link_to '← Back', tasks_path, class: "btn btn-outline-primary btn-sm align-self-center" %>
        </div>
        <h2 class="mb-3"><%= @task.title %></h2>
        <div class="h-100">
          <%= link_to "Edit", edit_task_path(@task), class: "btn btn-outline-warning btn-sm align-self-center" %>
        </div>
      </div>
      <div class="container d-flex flex-column p-0">
        <div class="bg-light rounded mb-3 p-3">
        <p class="m-0"><%= @task.details %></p>
        </div>
        <div class="d-flex flex-row justify-content-center text-black-50 mb-3">
          <small>Created on: <%= @task.created_at.strftime("%a. %d %B at %H:%M UTC") %></small>
          <% unless @task.created_at === @task.updated_at %>
            <small class="mx-2">•</small>
            <small>Updated on: <%= @task.updated_at.strftime("%a. %d %B at %H:%M UTC") %></small>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
